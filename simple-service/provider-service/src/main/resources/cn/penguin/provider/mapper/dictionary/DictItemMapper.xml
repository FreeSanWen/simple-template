    <update id="updateSelectiveById" parameterType="cn.penguin.provider.entity.dictionary.DictItem">
        update sys_dict_item
        <set>
            <if test="dictId != null">
                dict_id = #{dictId,jdbcType=BIGINT},
            </if>
            <if test="itemName != null">
