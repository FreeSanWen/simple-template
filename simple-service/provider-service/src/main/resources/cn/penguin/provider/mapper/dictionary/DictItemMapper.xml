        from sys_dict_item
        <include refid="Base_Condition_Sql"/>
    </select>

    <!-- 查询条件 -->
    <sql id="Base_Condition_Sql">
        <where>
            <if test="dictId != null ">
                and dict_id = #{dictId}
            </if>
            <if test="itemValue != null and itemValue != ''">
                and item_value = #{itemValue}
            </if>
